<div class="container mt-2">
<div class="row">
<div class="digg_pagination">
    <%= will_paginate @posts, :container => false %>
  </div>
</div>
<% @posts.each do |post| %>
  <div class="row p-2">
         <div class="card mt-2">
              <img class="card-img-top mt-2" src="<%= url_for post.optimized_image(post.thumbnail,950,170) %>" alt="Blog Post Image Card" />
              <div class="card-body">
                  <h5 class="card-title">
                  <%= link_to post.title , post %>
                  </h5>
                  <p class="card-body-text">
                  <%= post.body.to_plain_text.truncate_words(50)%></p>


                  <p class="class-text">
                     <small class="text-muted">
                     <%= post.updated_at.strftime("%A,%B,%e,%Y") %> by <%= post.user.username %> | <%= pluralize(post.views,"view") %> | 0 comments
                     </small>
                  </p>
              </div>
         </div>
  <div>
  <% end %>
</div>

